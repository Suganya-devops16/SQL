CREATE DATABASE Date_Engineer; -- creates a new database
DROP DATABASE Data_Engineer; -- TO DELETE A DATABASE
DROP SCHEMA Data_Engineer; -- same as above. u can use DATABASE Or SCHEMA
DROP SCHEMA IF EXISTS Data_Engineer; -- prevents error if db not found
SHOW DATABASES; -- shows all the databases
SHOW SCHEMAS; -- same as above. shows schemas/db

USE SYS; -- uses this database for all further commands
SHOW TABLES;-- shows all tables in the database being used
